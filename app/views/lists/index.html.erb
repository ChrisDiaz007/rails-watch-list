<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  Movie Lists
</div>

<div>
  <p class="btn btn-success m-3">
    <%= link_to "Create a movie list", new_list_path %>
  </p>

<div class="cards m-3">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR1qIPkqxoDFEZj0VKdgkWrFRlCfpucinA75w&s)">
    <%= link_to list.name, list_path(list) %>
  </div>
  <% end %>
</div>

</div>
