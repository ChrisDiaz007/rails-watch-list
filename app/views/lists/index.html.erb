<div class="home-header" style="background-image: url('<%= image_path "wallpaper.png"%>')">
  <div class="container">
    <div class="d-flex py-4">
      <div>
        <%= image_tag "logo.png", style: "height: 150px; width: 150px" %>
      </div>
      <div class="d-flex gap-5 justify-content-center align-items-center col-12 pb-5">
        <div>
          <p class="text-white fs-4"> <%= link_to "Home", root_path, class: "text-white text-decoration-none" %> </p>
        </div>
        <div>
          <p class="fs-4"> <%= link_to "Create a movie list", new_list_path, class: "text-white text-decoration-none" %> </p>
        </div>
      </div>
    </div>
    <div>
      <div class="py-5">
        <h1 class="">YOUR HOME FOR <br>
          MOVIE
        </h1>
        <h1>
          <div class="animation">BOOKMARKING</div>
        </h1>
      </div>
    </div>
  </div>
</div>
<div class="home-body py-5 d-flex">
  <div class="d-flex flex-wrap">
    <% @lists.each do |list| %>
      <div class="row md-3">
        <div class="d-flex justify-content-center align-items-center col-md-6">
          <%= link_to list.name, list_path(list), class: "text-black text-decoration-none" %>
        </div>
        <div class="d-flex flex-wrap col-md-6">
          <% list.bookmarks.each do |bookmark| %>
            <img src="<%= bookmark.movie.poster_url%>" alt="" style="height: 270px">
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
