<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "movie-nav.png"%>)">
  Movie Lists
</div>

<div>
  <p class="btn btn-success m-3 w-10">
    <%= link_to "Create a movie list", new_list_path %>
  </p>

<div class="cards m-3">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
    <%= link_to list.name, list_path(list) %>
  </div>
  <% end %>
</div>

</div>
